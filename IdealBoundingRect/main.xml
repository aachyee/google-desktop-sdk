<view width="600" height="400">
  <script src="main.js" />

  <div width="100%" height="100%" background="#FFC0CB" />

  <label name="introLabel" x="20" y="20" width="560" multline="true">&INTRO;</label>

  <label name="label1" width="200" x="0" y="60" bold="true" align="center"></label>
  <label name="label2" width="200" x="200" y="60" bold="true" align="center"></label>
  <label name="label3" width="200" x="400" y="60" bold="true" align="center"></label>

  <label name="title1" width="200" x="0" y="80" align="center">&TITLE1;</label>
  <label name="title2" width="200" x="200" y="80" align="center">&TITLE2;</label>
  <label name="title3" width="200" x="400" y="80" align="center">&TITLE3;</label>

  <edit name="edit1" height="80" width="160"
        x="20" y="100"
        value="&TITLE1;"
        background="#AFEEEE"
        multiline="true" wordwrap="true"/>
  <edit name="edit2" height="80" width="160"
        x="220" y="100"
        value="&TITLE2;"
        background="#FFF0F5"
        multiline="true" wordwrap="false"/>
  <edit name="edit3" height="26" width="160"
        x="420" y="100"
        value="&TITLE3;"
        background="#FFFACD"
        multiline="false" wordwrap="false"/>

  <button name="button1"
          width="64" height="22"
          x="68" y="358"
          image="button_up.png" overImage="button_over.png" downImage="button_down.png"
          onclick="onButtonClick(1);"
          caption="&RESIZE;" size="10" />
  <button name="button2"
          width="64" height="22"
          x="268" y="358"
          image="button_up.png" overImage="button_over.png" downImage="button_down.png"
          onclick="onButtonClick(2);"
          caption="&RESIZE;" size="10" />
  <button name="button3"
          width="64" height="22"
          x="468" y="358"
          image="button_up.png" overImage="button_over.png" downImage="button_down.png"
          onclick="onButtonClick(3);"
          caption="&RESIZE;" size="10" />
</view>
