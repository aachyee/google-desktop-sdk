<view resizable="true" width="470" height="338" onopen="update();">
  <script src="main.js" />

  <img name="picbox" width="100%" height="100%" cropMaintainAspect="photo" src="flower_bee.jpg" />

  <div x="10" y="10" background="#FFFFFF" height="20" width="160">
    <label height="100%" width="100%" name="multiplyStatus" />
  </div>
  <button height="30" width="80" x="10" y="40" caption="blue" enabled="true"
    color="#000000"
    image="button_up.png"
    downImage="button_down.png"
    overImage="button_over.png"
    onclick="picbox.colorMultiply = '#3797ff'; update();"/>
  <button height="30" width="80" x="10" y="80" caption="pink" enabled="true"
    color="#000000"
    image="button_up.png"
    downImage="button_down.png"
    overImage="button_over.png"
    onclick="picbox.colorMultiply = '#c91f9e'; update();"/>
  <button height="30" width="80" x="10" y="120" caption="red" enabled="true"
    color="#000000"
    image="button_up.png"
    downImage="button_down.png"
    overImage="button_over.png"
    onclick="picbox.colorMultiply = '#c01515'; update();"/>
  <button height="30" width="80" x="10" y="160" caption="yellow" enabled="true"
    color="#000000"
    image="button_up.png"
    downImage="button_down.png"
    overImage="button_over.png"
    onclick="picbox.colorMultiply = '#ddbf12'; update();"/>
  <button height="30" width="80" x="10" y="200" caption="original" enabled="true"
    color="#000000"
    image="button_up.png"
    downImage="button_down.png"
    overImage="button_over.png"
    onclick="picbox.colorMultiply = '#0'; update();"/>

  <div x="380" y="10" background="#FFFFFF" height="20" width="80">
    <label height="100%" width="100%" name="cropStatus" />
  </div>
  <button height="30" width="80" x="380" y="40" caption="crop=photo" enabled="true"
    color="#000000"
    image="button_up.png"
    downImage="button_down.png"
    overImage="button_over.png"
    onclick="picbox.cropMaintainAspect = 'photo'; update();"/>
  <button height="30" width="80"  x="380" y="80" caption="crop=true" enabled="true"
    color="#000000"
    image="button_up.png"
    downImage="button_down.png"
    overImage="button_over.png"
    onclick="picbox.cropMaintainAspect = 'true'; update();"/>
  <button height="30" width="80" x="380" y="120" caption="crop=false" enabled="true"
    color="#000000"
    image="button_up.png"
    downImage="button_down.png"
    overImage="button_over.png"
    onclick="picbox.cropMaintainAspect = 'false'; update();"/>
</view>
