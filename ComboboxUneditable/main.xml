<view width="250" height="150">
  <script src="main.js" />

  <img src="background.png" colorMultiply="#0000FF" />

  <!-- This is a quick and easy way to add a border to UI elements.
  This div is 1px larger than the combobox on each side.
  Its position is shifted by -1 to the upper left. -->
  <div background="#000000" x="19" y="39" width="212" height="22" />

  <combobox name="combobox"
            background="#FFFFFF"
            width="210" height="100"
            x="20" y="40"
            itemWidth="100%" itemHeight="20"
            itemSelectedColor="#99FF99" itemOverColor="#CCFFCC"
            maxDroplistItems="4"
            type="droplist"
            onchange="onChange();">
    <item>
      <label>&BRAINY;</label>
    </item>
    <item>
      <label>&CLUMSY;</label>
    </item>
    <item>
      <label>&GREEDY;</label>
    </item>
    <item>
      <label>&HANDY;</label>
    </item>
    <item>
      <label>&HEFTY;</label>
    </item>
    <item>
      <label color="#FF0000">&PAPA;</label>
    </item>
    <item>
      <label>&VANITY;</label>
    </item>
  </combobox>

  <label name="lastSelected" color="#FFFFFF" bold="true"
         width="210" height="20" x="20" y="20">&SELECT_SOMETHING;</label>
</view>
