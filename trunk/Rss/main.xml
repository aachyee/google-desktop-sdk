<view width="136" height="155" onopen="onOpen()" onsize="onSize()" resizable="true">
  <script src="editme/config_constants.js" />
  <script src="utils_js/utils.js" />
  <script src="utils_js/parsers.js" />
  <script src="utils_js/entry_list.js" />
  <script src="main.js" />
  <script src="editme/entry_item_impl.js" />

  <div name="container">
    <!-- Content -->
    <div name="content"
         background="#FFFFFF">
      <!-- Entry container -->
      <div name="entriesViewPort">
        <div name="entries" width="100%" />
      </div>
      <!-- Status label -->
      <label name="statusLabel" size="8" />
    </div>

    <!-- Scrollbar -->
    <div name="scrollbar"
         enabled="false">
      <progressbar name="bar"
                   cursor="hand"
                   enabled="true"
                   value="100"
                   orientation="vertical" />
    </div>

    <!-- Frame -->
    <div name="header">
      <img name="left" />
      <div name="middle" height="100%">
        <img name="stretchImage" width="100%" />
      </div>      
      <img name="right" />
    </div>

    <div name="logo">
      <img name="image" />
    </div>

    <div name="borderLeft">
      <img name="stretchImage" height="100%" />
    </div>

    <div name="borderRight">
      <img name="stretchImage" height="100%" />    
    </div>    

    <div name="footer">
      <img name="left" />
      <div name="middle" height="100%">
        <img name="stretchImage" width="100%" />
      </div>      
      <img name="right" />
    </div>
    
    <!-- Title -->
    <div name="title" width="100%" />
  </div>

  <!-- See "getImageDimensions" in utils.js -->
  <img name="imgSizer" width="0" height="0" />
</view>
